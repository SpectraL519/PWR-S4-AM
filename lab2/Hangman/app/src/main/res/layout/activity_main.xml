<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/hangman_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxx"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hangman_image"
        app:layout_constraintVertical_bias="0.15" />

    <TableLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/word"
        app:layout_constraintVertical_bias="0.19999999">

        <TableRow
            android:id="@+id/button_row_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="A"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="B"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="C"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="D"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="E"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="F"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="G"
                android:textColor="@color/white" />

        </TableRow>

        <TableRow
            android:id="@+id/button_row_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="H"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="I"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="J"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="K"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="L"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="M"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="N"
                android:textColor="@color/white" />

        </TableRow>

        <TableRow
            android:id="@+id/button_row_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="O"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="P"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="Q"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="R"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="S"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="T"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="U"
                android:textColor="@color/white" />

        </TableRow>

        <TableRow
            android:id="@+id/button_row_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="V"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="W"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="X"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="Y"
                android:textColor="@color/white" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@color/black"
                android:onClick="checkLetter"
                android:text="Z"
                android:textColor="@color/white" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:textColor="@color/black"
        android:text="RESTART"
        android:onClick="restartGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttons_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>